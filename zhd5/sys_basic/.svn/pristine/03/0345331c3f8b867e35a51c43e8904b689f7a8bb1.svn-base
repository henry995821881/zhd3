* {
  padding: 0;
  margin: 0;
  list-style: none;
}
.login {
	width: 100%;
	background: url(../images/entry.jpg) center no-repeat;
	height: 1000px;
	box-sizing: border-box;
    padding-top: 310px;
}

.login_box {
	width: 390px;
	background: #fff;
	height: 240px;
	/* position: relative;
	top: 310px;
	left: 49.5%; */
	box-sizing: border-box;
	padding-top: 10px;
	margin-left: 49.5%;
}

.login_box h3 {
	text-align: center;
	width: 100%;
	line-height: 35px;
	color: #0870b7;
	font-size: 20px;
}

.login_box .loginList {
	width: 300px;
	margin: 0 auto;
	margin-top: 12px;
	height: 30px;
	line-height: 30px;
	border: 1px #c7c7c7 solid;
	background: #f3f3f3;
}

.login_box .loginList span {
	font-size: 15px;
	width: 90px;
	text-align: right;
	display: block;
	float: left;
	background: url(../images/login_border_right_03.jpg) no-repeat right;
	margin-right: 5px;
}

.login_box .loginList input {
	height: 25px;
	display: inline-block;
	border: none;
	background: none;
	width: 200px;
	box-sizing: border-box;
    padding: 0 5px;
}
.login_box .loginList input:-webkit-autofill {
-webkit-box-shadow: 0 0 0px 1000px #f3f3f3 inset;
}

.login_box .crandomCode {
	width: 300px;
	margin: 0 auto;
	margin-top: 15px;
}

.login_box .crandomCode input {
	box-sizing: border-box;
	padding: 0 5px;
	width: 80px;
	height: 28px;
	line-height: 28px;
	display: block;
	float:left;
}

.login_box .btnlogin {
	margin-top: 15px;
	text-align: center;
}

.login_box .btnlogin .btnbg,
.login_box .btnlogin .reset {
	width: 100px;
	height: 30px;
	text-align: center;
	line-height: 30px;
	display: inline-block;
	color: #fff;
	font-size: 15px;
	margin: 0 5px;
}

.login_box .btnlogin .btnbg {
	background: #0e91c7;
}

.login_box .btnlogin .reset {
	background: #d77f13;
	border: none;
	cursor: pointer;
}
.bdp_bottom{
    text-align: center;
    width: 100%;
    margin-top: 250px;
}