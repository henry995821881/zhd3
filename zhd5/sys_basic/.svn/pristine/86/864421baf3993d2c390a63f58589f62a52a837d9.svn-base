var Verification_Disabled = function() {
	if($('#Name').val() === ''||$('#Material').val() === ''||$('#Specification').val() === ''||$('#Origin').val() === null) {
		add_table_submit.attr("disabled", "disabled");
	} else {
		add_table_submit.attr("disabled", false);
	}
}
